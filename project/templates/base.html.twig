<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg" style="background-color: #3CB371">
            <div class="container-fluid">
                <a class="navbar-brand"><i class="fa-brands fa-symfony"></i></a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a href="{{ path('home') }}" class="nav-link">Accueil</a>
                        </li>

                        {% if app.user %}
                            <li class="nav-item">
                                <a href="{{ path('dashboard_list', {'user': app.user.id}) }}" class="nav-link">Tableau de bord</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
                {% if app.user %}
                    <div>
                        Bonjour {{ app.user.firstname }} <a class="btn btn-sm btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% else %}
                    <div>
                        <a class="btn btn-sm btn-primary" href="{{ path('app_register') }}">S'inscrire</a>
                        <a class="btn btn-sm btn-success" href="{{ path('app_login') }}">Se connecter</a>
                    </div>
                {% endif %}
            </div>
        </nav>

        {% block body %}
        {% endblock %}
    </body>
</html>
